{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "gh_grep": {
      "type": "remote",
      "url": "https://mcp.grep.app"
    },
    "convex": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "convex@latest",
        "mcp",
        "start"
      ],
      "enabled": true
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp"
    },
    "chrome-devtools": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "chrome-devtools-mcp@latest"
      ]
    },
    "semgrep": {
      "type": "local",
      "command": [
        "semgrep",
        "mcp"
      ]
    }
  }
}